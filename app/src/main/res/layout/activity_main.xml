<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLizard"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/lizard"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="lizard"
    />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPaper"
        android:backgroundTint="@android:color/transparent"
        android:layout_below="@id/btnLizard"
        android:layout_centerHorizontal="true"
        android:src="@drawable/paper"
        />



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRock"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/rock"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnScissors"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/scissors"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLizard2"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/lizard"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/btnRock"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRock2"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/rock"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnPaper"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPaper2"
        android:backgroundTint="@android:color/transparent"
        android:layout_below="@id/btnRock2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/paper"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSpock"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/spock"
        android:layout_below="@id/btnPaper2"
        android:layout_centerHorizontal="true"
    />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRock3"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/rock"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btnRock2"
        android:layout_toRightOf="@+id/btnPaper2"
        />




</RelativeLayout>
